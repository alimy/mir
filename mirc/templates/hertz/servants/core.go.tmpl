package servants

import (
	"net/http"

	"github.com/alimy/mir/v4"
	"github.com/cloudwego/hertz/pkg/app"
)

type baseSrv struct{}

func (baseSrv) Bind(c *app.RequestContext, obj any) mir.Error {
	// do something
	return nil
}

func (baseSrv) Render(c *app.RequestContext, data any, err mir.Error) {
	if err == nil {
		c.JSON(http.StatusOK, data)
	} else {
		c.JSON(err.StatusCode(), err.Error())
	}
}
