package routes

import (
	. "github.com/alimy/mir/v2"
	. "github.com/alimy/mir/v2/engine"
)

func init() {
	AddEntry(new(Site))
}

// Site site interface info
type Site struct {
	Chain     Chain `mir:"-"`
	Index     Get   `mir:"/index/"`
	Titles    Post  `mir:"/titles"`
	Articles  Any   `mir:"/articles/:category/"`
	Category  Get   `mir:"/category/"`
	Login     Post  `mir:"/login"`
	Logout    Post  `mir:"/logout"`
	Assets    Any   `mir:"/assets" method:"Head,Get"`
	Others    Any   `mir:"/others"`
	Logs      Any   `mir:"/logs"`
	Status    Any   `mir:"/Status" method:"Get,Post,Head"`
	Admin     Get   `mir:"/admin""`
	Dashboard Get   `mir:"/dashboard"`
	HomePage  Get   `mir:"/home"`
}
