package v2

import (
	. "github.com/alimy/mir/v3"
	. "github.com/alimy/mir/v3/engine"
)

func init() {
	AddEntry(new(Site))
}

// Site site v2 interface info
type Site struct {
	Group     Group `mir:"v2"`
	Index     Get   `mir:"/index/"`
	Articles  Get   `mir:"/articles/:category/"`
	Category  Get   `mir:"/category/"`
	Login     Post  `mir:"/login"`
	Logout    Post  `mir:"/logout"`
	Assets    Any   `mir:"/assets" method:"Head,Get"`
	Others    Any   `mir:"/others"`
	Logs      Any   `mir:"/logs"`
	Status    Any   `mir:"/Status" method:"Get,Post,Head"`
	Admin     Get   `mir:"/admin""`
	Dashboard Get   `mir:"/dashboard"`
	HomePage  Get   `mir:"/home"`
}
